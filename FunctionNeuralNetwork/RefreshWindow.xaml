<Window x:Class="FunctionNeuralNetwork.RefreshWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunctionNeuralNetwork"
        mc:Ignorable="d"
        Title="Refreshing" Height="150" Width="150" MinHeight="150" MaxHeight="150" MinWidth="150" MaxWidth="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <local:CircularProgressBar />
        <Label Content="Refreshing Interface" Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
